{
	"compilerOptions": {
		"baseUrl": ".",
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"module": "commonjs",
		"outDir": "dist",
		"removeComments": true,
		"sourceMap": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"forceConsistentCasingInFileNames": true,
		"target": "es2018",
		"lib": ["es2018", "esnext.asynciterable"],
		"moduleResolution": "node",
		"paths": {
			"@controllers/*": [
				"src/controllers/*"
			],
			"@middlewares/*": [
				"src/middlewares/*"
			],
			"@shared/*": [
				"src/shared/*"
			],
			"@routes/*": [
				"src/routes/*"
			],
			"@repositories/*": [
				"src/repositories/*"
			],
			"@resolvers/*": [
				"src/resolvers/*"
			],
			"@services/*": [
				"src/services/*"
			],
			"@loaders/*": [
				"src/loaders/*"
			],
			"@loaders": [
				"src/loaders",
			],
			"@models/*": [
				"src/models/*"
			],
			"@config": [
				"src/config"
			],
			"@/*": [
				"src/*"
			],
		},
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"spec/**/*.ts",
		"src/index"
	],
	"exclude": [
		"node_modules",
		"node_modules/**/*.d.ts"
	]
}